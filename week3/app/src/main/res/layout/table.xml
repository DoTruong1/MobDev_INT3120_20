<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="Bai 4"
    app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:background="?attr/colorPrimary"

    />
<TableLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin"
    android:stretchColumns="0">



    <TableRow>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="Input1">

        </com.google.android.material.textfield.TextInputEditText>
    </TableRow>
    <TableRow>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="input2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1">

    </com.google.android.material.textfield.TextInputEditText>
    </TableRow>
    <TableRow>

    <RadioGroup
        android:id="@+id/cheeseOrNot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 x cheese" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None" />
    </RadioGroup>
    </TableRow>
<TableRow>

    <RadioGroup
        android:id="@+id/shape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/squareShape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="square" />

        <RadioButton
            android:id="@+id/roundShape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="round" />
    </RadioGroup>
</TableRow>
    <TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peperoni" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mushroom" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="veggies" />

    </LinearLayout>
    </TableRow>
    <TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order:"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        />
    </TableRow>

    <TableRow>

    <EditText
        android:id="@+id/textArea"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:background="@color/cardview_dark_background"
        android:text="Your order"
        android:textColor="@color/white"
        />
    </TableRow>
    <TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="left">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:text="EXIT"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/buttonStyleSmall"
            android:layout_alignParentRight="true"
            android:text="SMS - PLACE YOUR ORDER"/>

    </RelativeLayout>
    </TableRow>

</TableLayout>
</com.google.android.material.appbar.AppBarLayout>
